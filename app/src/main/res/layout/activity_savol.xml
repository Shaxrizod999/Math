<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SavolActivity"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/linear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:background="@drawable/datm_back_style"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/dtmdanqaytish"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView


                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/dtmdanqaytish"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="1 - variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:id="@+id/vaqt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_access_alarms_24"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"/>



            <ImageView

                android:id="@+id/kalkulyator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_calculate_24"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="60dp">

        <Button

            android:id="@+id/test"
            android:layout_width="150dp"
            android:textAllCaps="false"
            android:text="Testni boshlash"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/count_time"
            android:layout_width="wrap_content"
            android:text="Vaqtni o'rnating"
            android:visibility="gone"
            android:textColor="#C82626"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button

        android:id="@+id/tugat"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:text="Testni tugatish"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv"
        android:orientation="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_view_variantlar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout

        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>